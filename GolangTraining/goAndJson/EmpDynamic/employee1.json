{
    "openapi": "3.0.3",
    "info": {
        "title": "Employee",
        "description": "APIs to perform management of employees",
        "version": "1.0.0"
    },
    "servers":[
      {

        "port": "8080",

        "description": "Local Host Server"

      }
    ],
    "path":{
    "/api/employee/create":{
      "POST": {
        "summary": "Create Employee ",
        "description": "Create Employee details.",
        "operationId": "CreateEmployeeDetails",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                  "required": [
                    "firstname",
                    "lastname",
                    "employeeID",
                    "email",
                    "password",
                    "age"
                  ],
                  "properties": {
                    "Firstname": {
                      "type": "string",
                      "description": "FirstName of the employee."
                    },
                    "Lastname": {
                      "type": "string",
                      "description": "LastName of the employee."
                    },
                    "EmployeeID": {
                      "type": "string",
                      "description": "Employee ID of the employee."
                    },
                    "Email": {
                      "type": "string",
                      "description": "Email ID of the employee."
                    },
                    "Password": {
                      "type": "string",
                      "description": "Password of the employee."
                    }
                  },
                  "example": {
                    "firstname":"Kaivan",
                    "lastname":"Shah",
                    "employeeID":"123",
                    "email": "Kaivan123@gmail.com",
                    "password":"kaivanShah",
                    "age": "39"
                  }
              }
            }
          }
        }
      }
    },
    "/api/employee/delete":{
      "parameters": [
        {
          "in": "path",
          "name": "employeeID",
          "schema": {
            "type": "string"
          },
          "required": true,
          "description": "Id of the corresponding employee"
        }
      ],
      "POST": {
        "summary": "Delete Employee Data",
        "description": "Delete Employee data corresponding to the given Employee id",
        "operationId": "DeleteEmployeeDetailsCorrespondingToEmployeeId"
      }
    },
    "/api/employee/update":{
      "parameters": [
        {
          "in": "path",
          "name": "employeeID",
          "schema": {
            "type": "string"
          },
          "required": true,
          "description": "Id of the corresponding employee"
        }
      ],
      "POST": {
        "summary": "Update Employee details",
        "description": "Update Employee details corresponding to the given Employee id",
        "operationId": "UpdateEmployeeDetailsCorrespondingToEmployeeId",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                
                "required": [
                  "email",
                  "age"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "Email ID of the employee. Minimum and maximum character allowed is 5 and 30 respectively"
                  },
                  "age": {
                    "type": "int",
                    "description": "Age of the Employee"
                  }
                },
                "example": {
                  "email": "Kaivan123@gmail.com",
                  "age": "32"
                }
               }
              }
            }
          }
        }
      },
  
    "/api/employee/display": {
        "parameters": [
          {
            "in": "path",
            "name": "employeeID",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Id of the corresponding employee"
          }
        ],
        "POST": {
          "summary": "Gets Employee details",
          "description": "Gets Employee detail corresponding to the given Employee id",
          "operationId": "GetEmployeeDetailsCorrespondingToEmployeeId"
        }
  }
},
  "connectDB":{
      "databasename":"employeedb",
      "host":"localhost",
      "port":"5432",
      "user":"postgres",
      "password":"Pass@123",
      "sslmode":"disable",
      "tablename":"employeetb",
      "TBproperties":{
        "columns":[
          {
            "cname":"Firstname",
            "ctype":"varchar",
            "type":"string"
          },
          {
            "cname":"Lastname",
            "ctype":"varchar",
            "type":"string"
          },
          {
            "cname":"Empid",
            "ctype":"varchar",
            "type":"string"
          },
          {
            "cname":"Email",
            "ctype":"varchar",
            "type":"string"
          },
          {
            "cname":"Password",
            "ctype":"varchar",
            "type":"string"
          }
        ]
      },
      "example": {
        "host":"localhost",
        "post":"8080",
        "user":"postgres",
        "password":"kaivanShah",
        "sslmode": "disable"
      }
    }
}